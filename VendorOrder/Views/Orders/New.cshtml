@{
  Layout = "_Layout";
}

<h1>Add a new order to @Model.Name</h1>

<form action="/vendors/@Model.Id/orders/create" method="post">
  <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">

  <label for="orderName">Order Name</label>
  <input id="orderName" name="orderName" type="text" required>

  <label for="orderDescription">Order Description</label>
  <input id="orderDescription" name="orderDescription" type="text" required>

  <label for="orderPrice">Order Price</label>
  <input id="orderPrice" name="orderPrice" type="number" step="0.01" required>

  <label for="orderDate">Order Date</label>
  <input id="orderDate" name="orderDate" type="date" required>

  <button type='submit'>Add Order</button>
</form>